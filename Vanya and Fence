//problem: https://codeforces.com/contest/677/problem/A


#include <iostream>
using namespace std;
int main(){
    int n,h;
    cin>>n;
    cin>>h;
    vector<int> numbers(n);
     for (int i = 0; i < n; ++i) {
        cin >> numbers[i];
        
     }
     int w=0;
     for (int i = 0; i < n; ++i) {
        if (numbers[i]>h){
            w=w+2;
            
        }else{
            w++;
        }
        
        
        
     }
     cout<<w<<endl;
    return 0;
}
