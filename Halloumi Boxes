//problem: https://codeforces.com/contest/1903/problem/A

#include <bits/stdc++.h>
using  namespace std;
int main(){
    int t;
    cin>>t;
    
    while (t--){
        int n,x,k;
        cin >>n>>k;
        vector <int> arr;
        
        for(int i=0;i<n;i++){
            cin>>x;
            arr.push_back(x);
        }
        if (k==1 && !is_sorted(arr.begin(),arr.end())){
            cout<<"NO"<<endl;
        }
        else{ 
            cout<<"YES"<<endl;
            
        }
    }return 0;
        }
